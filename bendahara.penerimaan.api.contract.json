{
  "openapi":"3.0.2",
  "info": {
    "title":"Finance API RESTful API",
    "version":"1.0",
    "description": "Open API for Finance App",
    "contact": {
      "name": "Yusron Fauzan Nasrullah",
      "email": "Yusronsronz7@gmail.com"
    }
  },
  "servers": [
    {
      "url":"https://api.dev.uninus.ac.id/api",
      "description": "Uninus Digizatilation API Server"
    }
  ],
  "paths": {
    "/payment_summary": {
      "get": {
        "summary": "Get data payment summary",
        "description": "Will return data total student, student with scholarship, full payment, installment payment, unpaid with addtion per day or by filter",
        "parameters": [
          {
            "name": "filter",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "nullable": true,
              "enum": ["DAILY", "WEEKLY", "MONTHLY", "YEARLY"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get Data Finance1",
            "content": {
              "appcation/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "label": {
                            "type": "string"
                          },
                          "total_student": {
                            "type": "integer"
                          },
                          "paid": {
                            "type": "integer"
                          },
                          "unpaid": {
                            "type": "integer"
                          },
                          "installment_payment": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "summary": {
                      "type": "object",
                      "properties": {
                        "total_student": {
                          "type": "integer"
                        },
                        "student_with_scholarship": {
                          "type": "integer"
                        },
                        "additions_student_scholarship": {
                          "type": "integer"
                        },
                        "paids": {
                          "type": "integer"
                        },
                        "additions_paids": {
                          "type": "integer"
                        },
                        "installment_payment": {
                          "type": "integer"
                        },
                        "additions_installment_payment": {
                          "type": "integer"
                        },
                        "undone_payment": {
                          "type": "integer"
                        },
                        "additions_undone_payment": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/faculty-payment-deposit": {
      "get": {
        "summary": "Get Data Faculty Deposit",
        "description": "Will return data deposit from faculty to finance",
        "responses": {
          "200": {
            "description": "Get Data Finance1",
            "content": {
              "appcation/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "faculty": {
                            "type": "string"
                          },
                          "department": {
                            "type": "string"
                          },
                          "total_student": {
                            "type": "integer"
                          },
                          "paid": {
                            "type": "integer"
                          },
                          "unpaid": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "summary": {
                      "type": "object",
                      "properties": {
                        "total_student": {
                          "type": "integer"
                        },
                        "paid": {
                          "type": "integer"
                        },
                        "unpaid": {
                          "type": "integer"
                        },
                        "additions": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}