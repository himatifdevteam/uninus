                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/faculty-payment-deposit": {
      "get": {
        "summary": "Get Data Faculty Deposit",
        "description": "Will return data deposit from faculty to finance",
        "responses": {
          "200": {
            "description": "Get Data Finance1",
            "content": {
              "appcation/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "faculty": {
                            "type": "string"
                          },
                          "department": {
                            "type": "string"
                          },
                          "total_student": {
                            "type": "integer"
                          },
                          "paid": {
                            "type": "integer"
                          },
                          "unpaid": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "summary": {
                      "type": "object",
                      "properties": {
                        "total_student": {
                          "type": "integer"
                        },
                        "paid": {
                          "type": "integer"
                        },
                        "unpaid": {
                          "type": "integer"
                        },
                        "additions": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
